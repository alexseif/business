<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ block('card_title')|striptags|default('app.name'|trans) }}{% endblock %} | {{ 'app.name'|trans }}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="bg-dark">
{% block header %}{% include '_header.html.twig' %}{% endblock %}
{% block body %}
    <div class="container">
        {% block main %}
            <div id="main">
                <div class="row">
                    <div class="col-xs-12 col-lg-9">
                        {% block content %}
                            <div class="card">
                                <div class="card-header">
                                    <h1>{% block card_title %}{% endblock %}</h1>
                                </div>
                                <div class="card-body">
                                    {% block card_body %}{% endblock %}
                                </div>
                            </div>
                        {% endblock %}
                    </div><!-- .col-9 -->
                    <div class="col">{% block sidebar %}{% endblock %}</div><!-- .col -->
                </div><!-- .row -->
            </div><!-- #main -->
        {% endblock %}
    </div><!-- .container -->
{% endblock %}
{% block footer %}
<footer>
    <div class="container">{{ 'app.developer'|trans }}</div>
</footer>
{% endblock %}
</body>
</html>
