{% extends 'base.html.twig' %}

{% block card_title %}{{ 'tracker.tracker'|trans }}{% endblock %}

{% block card_body %}

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'tracker.name'|trans }}</th>
            <td>{{ tracker.name }}</td>
        </tr>
        <tr>
            <th>{{ 'tracker.duration'|trans }}</th>
            <td>{{ tracker.duration }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
{% block sidebar %}
    <a href="{{ path('app_tracker_index') }}">{{ 'actions.back'|trans }}</a>
    <a href="{{ path('app_tracker_edit', {'id': tracker.id}) }}">{{ 'actions.edit'|trans }}</a>
    {{ include('tracker/_delete_form.html.twig') }}
{% endblock %}
